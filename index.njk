  <script>
    // Typewriter for tagline only
    const taglineEl = document.getElementById('tagline');
    const taglineText = "Scribbles • Words • Frames • Motion"; // edit anytime
    let idx = 0;

    function typeTagline() {
      if (idx <= taglineText.length) {
        taglineEl.textContent = taglineText.slice(0, idx++);
        setTimeout(typeTagline, 70); // typing speed (ms per char)
      } else {
        // stop the cursor after done, or keep it blinking if you like
        taglineEl.classList.add('done');
      }
    }
    // small delay so layout settles
    setTimeout(typeTagline, 300);
  </script>
